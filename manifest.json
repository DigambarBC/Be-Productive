{
    "name": "Be Productive",
    "version": "0.0.1",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/"
            ],
            "js": [
                "config/contentscript.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": "logo.png"
    },
    "icons": {
        "128": "logo.png"
    },
    "permissions": [
        "activeTab",
        "webRequest",
        "tabs",
        "storage"
    ]
}